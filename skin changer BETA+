import pygame
import sys

# Initialize Pygame
pygame.init()

# Constants
SKIN_COUNT = 5  # Number of skins available
SKIN_SIZE = (150, 150)  # Larger skin size
BUTTON_SIZE = (300, 150)  # Larger button size


BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
COLORS = [
    (255, 0, 0, "Red"),
    (0, 255, 0, "Green"),
    (0, 0, 255, "Blue"),
    (255, 255, 0, "Yellow"),
    (255, 165, 0, "Orange"),
]

# Setup the screen
screen = pygame.display.set_mode((0, 0), pygame.FULLSCREEN)
SCREEN_WIDTH, SCREEN_HEIGHT = screen.get_size()
LEFT_SIDE_WIDTH = SCREEN_WIDTH // 2
pygame.display.set_caption('Skin Changer Room')

# Load skins
skins = []
for color in COLORS:
    skin = pygame.Surface(SKIN_SIZE)
    skin.fill(color[:3])  # Fill with RGB color
    skins.append((skin, color[3]))  # Store surface and color name

# Skin indices
left_skin_index = 0
right_skin_index = 0

# Font
pygame.font.init()
font = pygame.font.SysFont('Arial', 24)

# DUGME
button_font = pygame.font.SysFont('Arial', 50)
button_text = button_font.render('Play', True, WHITE)
button_rect = pygame.Rect(0, 0, *BUTTON_SIZE)
button_rect.center = (SCREEN_WIDTH // 2, SCREEN_HEIGHT // 2)
button_color = BLACK

# Main loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_ESCAPE:
                running = False
            # Left side skin changer
            if event.key == pygame.K_a:
                left_skin_index = (left_skin_index - 1) % SKIN_COUNT
            elif event.key == pygame.K_d:
                left_skin_index = (left_skin_index + 1) % SKIN_COUNT
            # Right side skin changer
            elif event.key == pygame.K_LEFT:
                right_skin_index = (right_skin_index - 1) % SKIN_COUNT
            elif event.key == pygame.K_RIGHT:
                right_skin_index = (right_skin_index + 1) % SKIN_COUNT
        elif event.type == pygame.MOUSEBUTTONDOWN:
            if button_rect.collidepoint(event.pos):
                running = False

    # Draw everything
    screen.fill("aquamarine")

    # Draw left side
    # Adding border
    skin, color_name = skins[left_skin_index]
    screen.blit(skin, (LEFT_SIDE_WIDTH // 4 - SKIN_SIZE[0] // 2, SCREEN_HEIGHT - SKIN_SIZE[1] - 80))
    color_text = font.render(color_name, True, BLACK)
    screen.blit(color_text, (LEFT_SIDE_WIDTH // 4 - color_text.get_width() // 2, SCREEN_HEIGHT - 30))

    # Draw right side
    
    skin, color_name = skins[right_skin_index]
    screen.blit(skin, (LEFT_SIDE_WIDTH + (LEFT_SIDE_WIDTH // 4) * 3 - SKIN_SIZE[0] // 2, SCREEN_HEIGHT - SKIN_SIZE[1] - 80))
    color_text = font.render(color_name, True, BLACK)
    screen.blit(color_text, (LEFT_SIDE_WIDTH + (LEFT_SIDE_WIDTH // 4) * 3 - color_text.get_width() // 2, SCREEN_HEIGHT - 30))

    # Draw button
    pygame.draw.rect(screen, button_color, button_rect)
    button_text = button_font.render('Play', True, WHITE)
    screen.blit(button_text, button_rect.move((BUTTON_SIZE[0] - button_text.get_width()) // 2 - 10, (BUTTON_SIZE[1] - button_text.get_height()) // 2 - 10))

    pygame.display.flip()

pygame.quit()
sys.exit()

