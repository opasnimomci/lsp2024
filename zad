import pygame
import sys

# Initialize Pygame
pygame.init()

# Constants
SCREEN_WIDTH, SCREEN_HEIGHT = 800, 800
TILE_SIZE = 100  # Size of each square on the chessboard
ROWS, COLS = SCREEN_HEIGHT // TILE_SIZE, SCREEN_WIDTH // TILE_SIZE  # Number of rows and columns

# Setup the screen
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption('Chessboard Pattern')

# Color for lines
LINE_COLOR = (0, 0, 0)  # Black color for lines

# Main loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Clear the screen
    screen.fill((255, 255, 255))  # White background

    # Draw the chessboard lines
    for row in range(ROWS + 1):
        pygame.draw.line(screen, LINE_COLOR, (0, row * TILE_SIZE), (SCREEN_WIDTH, row * TILE_SIZE))
    for col in range(COLS + 1):
        pygame.draw.line(screen, LINE_COLOR, (col * TILE_SIZE, 0), (col * TILE_SIZE, SCREEN_HEIGHT))

    pygame.display.flip()

pygame.quit()
sys.exit()

